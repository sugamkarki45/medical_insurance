{
  "rules_version": "1.0",
  "last_updated": "2025-10-09",
  "claim_categories": {
    "OPD": {
      "rules": {
        "ticket_valid_days": 7,
        "single_ticket_per_episode": true,
        "use_same_claim_code_within_validity": true,
        "allow_multiple_consultations": true,
        "require_referral_for_interdepartmental_consultation": true,
        "submit_daily_after_service": true,
        "map_followup_to_same_claim_within_validity": true,
        "require_nmc_and_diagnosis": true
      },
      "required_referral_documents": [
        "referring_doctor_name",
        "referring_doctor_nmc_number",
        "referral_reason",
        "referral_signature"
      ],
      "notes": [
        "Diagnosis must follow ICD-11.",
        "Provisional, differential, and final diagnosis must be recorded.",
        "All consultations within 7 days use same OPD claim code."
      ]
    },

    "Emergency": {
      "rules": {
        "submit_at_discharge": true,
        "max_medicine_days": 7
      },
      "notes": []
    },

    "IPD": {
      "rules": {
        "submit_at_discharge": true,
        "package_based_claim_only": true,
        "require_final_diagnosis": true,
        "require_doctor_nmc": true
      },
      "required_documents": [
        "final_diagnosis",
        "doctor_nmc_number",
        "hib_discharge_summary"
      ],
      "notes": [
        "Submission must strictly follow IMIS package guidelines."
      ]
    }
  },

  "referral_rules": {
    "first_contact_points": [
      "primary_health_center",
      "basic_hospital",
      "municipality_hospital"
    ],
    "require_referral_for_non_emergency": true,
    "require_referral_for_emergency": false,
    "allowed_referred_service_levels": [
      "referral_hospital",
      "specialized_hospital"
    ],
    "description": "Only emergency cases may bypass referral rules."
  },
  

  "general_rules": {
  
    "disease_billing": {
      "doctor_diagnosed_only_valid": true,
      "unrelated_treatment_claimable": false
    },
    "max_bed_charge_per_day":250,
    "transfer_conditions": {
      "from_opd_to_ipd": {
        "phc": "opd_charge_claimable_only",
        "hospital": "opd_charge_and_bed_change_claimable"
      }
    },

    "multiple_disease": {
      "priority": "high_priority_treated_disease_claimable_only"
    },

    "surgery": {
      "claim_percentage": {
        "first_disease": 100,
        "second_disease": 50
      }
    },

    "medical_management": {
      "claim_percentage": {
        "first_disease": 100,
        "second_disease": 50
      },
      "discharge_medicine_claimable_seperately": true
    },

    "surgery_package": {
      "includes": ["pre_operative_investigation", "operative_charges"],
      "preoperative_investigation_separate_claim_not_allowed": true,
      "notes": "Pre-operative investigations cannot be claimed separately. If patient needed ICU care post-surgery, then ICU per day package can be claimed separately."
    }
  },
  "co-payment_method":{ 
    "exempt_categories": ["ultra_poor", "fchv", "hiv_aids", "severe_tb", "severe_disability", "leprosy"],
    "exempt_age": 70,
    "co_payment_percentage": 10
  },
  "non_covered_services": {
    "items": [
      {
        "name": "Spectacles",
        "type": "optometry",
        "annual_cost_threshold_npr": 1000,
        "claimable": false,
        "notes": "Spectacles costing more than NPR 1000 per year are not covered."
      },
      {
        "name": "Hearing Instruments",
        "type": "medical_device",
        "annual_cost_threshold_npr": 5000,
        "claimable": false,
        "notes": "Hearing instruments costing more than NPR 5000 per year are not covered."
      },
      {
        "name": "White Stick",
        "type": "medical_device",
        "annual_cost_threshold_npr": 1000,
        "claimable": false,
        "notes": "White sticks costing more than NPR 1000 per year are not covered."
      },
      {
        "name": "Crutches",
        "type": "medical_device",
        "annual_cost_threshold_npr": 1200,
        "claimable": false,
        "notes": "Crutches costing more than NPR 1200 per year are not covered."
      }
    ],
    "ceiling_rule": {
      "description": "Claims must be within the ceiling of the HIB policy irrespective of quantity capping for services and items.",
      "enforcement": "Claims capped by remaining_balance from HIB policy, overriding max_per_visit or other quantity limits if lower."
    }
  }
}
