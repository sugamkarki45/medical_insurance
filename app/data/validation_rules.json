{
  "rules_version": "1.0",
  "last_updated": "2025-10-09",
  "claim_categories": {
     "OPD": {
      "rules": {
        "ticket_valid_days": 7,
        "different_claim_code_per_day": true,
        "different_consultations_allowed_with_same_OPD_ticket": true,
        "require_different_claim_code_per_consultation":true
      },
      "required_documents_for_interdepartmental_consultation_referal": [
        "doctor_name",
        "doctor_nmc_number",
        "doctor_signature",
        "reason_for_referal"
      ],
      "notes": "Diagnosis must be according to NMC and ICD 11. Provisional, Differential and final diagnosis must be written."
    },

    "Emergency": {
      "rules": {
        "claim_time": "during_discharge",
        "max_medicine_days": 7
      },
      "notes": ""
    },

    "IPD": {
      "rules": {
        "claim_time": "during_discharge"
      },
      "required_documents_in_imis": [
        "final_diagnosis",
        "doctor_nmc_number",
        "hib_standard_discharge_summary"
      ],
      "notes": "HIB-prepared discharge summary is compulsory for IPD claims."
    }
  },
  "rules_regarding_referal":{
    "first_service_points": [
    "primary_health_center",
    "basic_hospital",
    "palika_hospital"
  ],
  "require_referal_slip_for_emergency_cases": false,
  "require_referal_slip_for_non_emergency_cases": true,
  "allowed_service_type_after_referal": [
    "referral_hospital",
    "specialized_hospital"
  ],
  "description":"Except in emergency cases, referral and specialized hospital services can only be accessed with a referral slip from designated first service points."
  },
  

  "general_rules": {
  
    "disease_billing": {
      "doctor_diagnosed_only_valid": true,
      "unrelated_treatment_claimable": false
    },
    "max_bed_charge_per_day":250,
    "transfer_conditions": {
      "from_opd_to_ipd": {
        "phc": "opd_charge_claimable_only",
        "hospital": "opd_charge_and_bed_change_claimable"
      }
    },

    "multiple_disease": {
      "priority": "high_priority_treated_disease_claimable_only"
    },

    "surgery": {
      "claim_percentage": {
        "first_disease": 100,
        "second_disease": 50
      }
    },

    "medical_management": {
      "claim_percentage": {
        "first_disease": 100,
        "second_disease": 50
      },
      "discharge_medicine_claimable_seperately": true
    },

    "surgery_package": {
      "includes": ["pre_operative_investigation", "operative_charges"],
      "preoperative_investigation_separate_claim_not_allowed": true,
      "notes": "Pre-operative investigations cannot be claimed separately. If patient needed ICU care post-surgery, then ICU per day package can be claimed separately."
    }
  },
  "co-payment_method":{ 
    "exempt_categories": ["ultra_poor", "fchv", "hiv_aids", "severe_tb", "severe_disability", "leprosy"],
    "exempt_age": 70,
    "co_payment_percentage": 10
  },
  "non_covered_services": {
    "items": [
      {
        "name": "Spectacles",
        "type": "optometry",
        "annual_cost_threshold_npr": 1000,
        "claimable": false,
        "notes": "Spectacles costing more than NPR 1000 per year are not covered."
      },
      {
        "name": "Hearing Instruments",
        "type": "medical_device",
        "annual_cost_threshold_npr": 5000,
        "claimable": false,
        "notes": "Hearing instruments costing more than NPR 5000 per year are not covered."
      },
      {
        "name": "White Stick",
        "type": "medical_device",
        "annual_cost_threshold_npr": 1000,
        "claimable": false,
        "notes": "White sticks costing more than NPR 1000 per year are not covered."
      },
      {
        "name": "Crutches",
        "type": "medical_device",
        "annual_cost_threshold_npr": 1200,
        "claimable": false,
        "notes": "Crutches costing more than NPR 1200 per year are not covered."
      }
    ],
    "ceiling_rule": {
      "description": "Claims must be within the ceiling of the HIB policy irrespective of quantity capping for services and items.",
      "enforcement": "Claims capped by remaining_balance from HIB policy, overriding max_per_visit or other quantity limits if lower."
    }
  }
}
